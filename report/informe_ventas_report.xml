<odoo>
    <!-- DefiniciÃ³n del Informe -->
    <record id="informe_ventas_action" model="ir.actions.report">
        <field name="name">Informe de Ventas</field>
        <field name="model">informe.ventas</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ventas_aitic.report_informe_ventas</field>
        <field name="report_file">ventas_aitic.report_informe_ventas</field>
        <field name="print_report_name">object.name</field>
    </record>

    <!-- Plantilla del Informe -->
    <template id="report_informe_ventas">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Informe de Ventas Mensuales</h2>
                        <p>Fecha de Inicio: <t t-esc="doc.fecha_inicio"/></p>
                        <p>Fecha de Fin: <t t-esc="doc.fecha_fin"/></p>
                        <p>Ingresos Totales: <t t-esc="ingresos_totales"/></p>
                        <h3>Desglose por Producto</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Ingresos</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="desglose_producto.items()" t-as="item">
                                    <tr>
                                        <td><t t-esc="item[0].name"/></td>
                                        <td><t t-esc="item[1]"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <h3>Desglose por Cliente</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Cliente</th>
                                    <th>Ingresos</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="desglose_cliente.items()" t-as="item">
                                    <tr>
                                        <td><t t-esc="item[0].name"/></td>
                                        <td><t t-esc="item[1]"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
